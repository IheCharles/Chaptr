<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/in"
    android:id="@+id/circleimagelinear"
    android:layout_marginTop="5dp"
    android:orientation="vertical" android:layout_width="60dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circleimageview2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:clickable="true"
        android:longClickable="true"
        app:civ_border_color="#FF000000"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="26dp"
        android:id="@+id/whentostop"
        android:background="@drawable/circleborder2"
        android:gravity="center"

        android:layout_marginStart="31.5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_circleview_alert_cardview2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="9dp"
            android:background="@color/in">
        </android.support.v7.widget.CardView>
    </RelativeLayout>




</RelativeLayout>