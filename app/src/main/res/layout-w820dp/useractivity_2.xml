<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar_viewpostug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fitsSystemWindows="true"
        android:background="@color/in"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        >
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/callaping_vp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:background="@color/Colo"
        android:fitsSystemWindows="true"
        android:paddingBottom="50dp"
        app:scrimVisibleHeightTrigger="250dp">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/imageView_blur2"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>


        <RelativeLayout
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
            android:id="@+id/relativelayout_secondhelpview2"
                android:layout_height="match_parent">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_useractivity2"
                    android:layout_width="170dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="170dp"
                    android:layout_marginTop="35dp"
                    android:clickable="true"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#FFFFFE" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circleview_rel"

                android:layout_marginEnd="5dp"
                android:layout_alignEnd="@+id/imageView_useractivity2"
                android:layout_marginTop="155dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_adder"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="17dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardMaxElevation="0dp"
                    android:background="@color/in">

                    <ProgressBar
                        android:id="@+id/progressBaru_follow"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:theme="@style/RedAccent"
                        android:indeterminateTint="@color/Colo"
                        android:progressTint="@color/Colo" />

                    <ImageButton
                        android:id="@+id/imageButton_useractivtyadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/in"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_person_add_black_24dp" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
                <ProgressBar
                    android:id="@+id/progressBaru2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_centerHorizontal="true"
                    />


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_UserActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme">

                </android.support.v7.widget.Toolbar>

                <TextView
                    android:id="@+id/editText_useractivity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:typeface="serif"
                    android:textSize="30sp"
                    />


                    <TextView
                    android:id="@+id/statuc_useractivity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:layout_marginTop="270dp"
                        android:layout_marginBottom="65dp"
                        android:scrollbars="vertical"
                        android:textColor="#FF000000"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:typeface="serif"/>
            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/circleborder"
            android:layout_marginTop="-75dp">
            <android.support.v7.widget.CardView
                android:id="@+id/useactivity_ffp_card22"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#fffffe"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardPreventCornerOverlap="false"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView_postsnumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textColor="#FFF"
                            android:text="Posts" />

                        <TextView
                            android:id="@+id/textView_followerbooks2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFF"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="30dp"
                        android:paddingStart="30dp">
                    <TextView
                        android:id="@+id/textView_followers2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:text="Followers" />

                    <TextView
                        android:id="@+id/textView_followersnumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                    </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView_followering2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:text="Following" />

                    <TextView
                        android:id="@+id/textView_followingsnumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nested_ua2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relativeview_useractivity2"
            android:layout_height="80dp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycleview_new_circleImage2"
                android:layout_alignParentBottom="true"
                android:background="@color/Colo"
                android:layout_height="80dp"
                />

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_useractivity2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="@android:color/background_light"
            android:background="@color/Colo"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"/>



            <android.support.v4.view.ViewPager
                android:id="@+id/container_activity2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

</LinearLayout>




    </android.support.design.widget.CoordinatorLayout>



