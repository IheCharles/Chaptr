<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cord_ua"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/textView_deletenotice_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="#fffffe"
        android:text="This post is no longer available" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar_viewpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/in"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/callaping_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:paddingBottom="50dp"
            app:contentScrim="@color/in"
            android:background="@color/Colo"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimVisibleHeightTrigger="250dp"

            >
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/imageView_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


            <RelativeLayout
                android:id="@+id/relativelayout_secondhelpview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">



                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_useractivity"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="50dp"
                    android:clickable="true"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#FFFFFE" />

                <ProgressBar
                    android:id="@+id/progressBaru1"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_UserActivity"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme">

                </android.support.v7.widget.Toolbar>

                <TextView
                    android:id="@+id/editText_useractivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="220dp"
                    android:ems="10"
                    android:maxLines="12"
                    android:scrollbars="horizontal"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:typeface="serif" />


                <TextView
                    android:id="@+id/statuc_useractivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="65dp"
                    android:layout_marginTop="270dp"
                    android:maxLines="12"
                    android:ellipsize="end"
                    android:scrollbars="vertical"
                    android:textAlignment="center"
                    android:textColor="#FF000000"
                    android:textSize="15sp"
                    android:typeface="serif" />


            </RelativeLayout>




        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/circleborder"
            android:layout_marginTop="-75dp"
            android:layout_marginEnd="5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_circleadd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:layout_collapseMode="pin"
            app:cardBackgroundColor="#fffffe"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false" >

            <ImageButton

                android:id="@+id/cardview_circleadd_buttton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/in"
                app:srcCompat="@drawable/ic_adds_black_24dp" />
        </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:background="@drawable/circleborder"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-58dp">
        <android.support.v7.widget.CardView
            android:id="@+id/useactivity_ffp_card"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:cardBackgroundColor="#fffffe"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/textView_postsnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Posts"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_followerbooks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="5.9k"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="35dp"
                    android:paddingStart="35dp">

                    <TextView
                        android:id="@+id/textView_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Followers"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_followersnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="3dp">

                    <TextView
                        android:id="@+id/textView_followering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Following"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_followingsnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nested_ua"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical">


            <RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/relativeview_useractivity"

    android:layout_height="80dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_new_circleImage"
        android:layout_width="match_parent"
        android:background="#fffffe"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
         >
    </android.support.v7.widget.RecyclerView>



       <android.support.v7.widget.CardView
           android:id="@+id/nextcircle"
           android:layout_width="30dp"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           app:cardCornerRadius="16dp"
           app:cardPreventCornerOverlap="false"
           android:layout_marginEnd="5dp"
           app:cardElevation="0dp"
           app:cardMaxElevation="0dp"
           android:layout_height="30dp" >

           <ImageButton
               android:id="@+id/imageButton_nextcircle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@color/in"
               android:layout_gravity="center"
               app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
       </android.support.v7.widget.CardView>

</RelativeLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_useractivity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="#fffffe"

            android:background="#fffffe"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"/>




    <android.support.v4.view.ViewPager
        android:id="@+id/container_activity"
        android:layout_width="match_parent"


        android:layout_height="match_parent" />


    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>


