<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="#fffffe"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_commentimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView_commenttime"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:text="12:12Am"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/coment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textSize="14sp"
            android:paddingBottom="30dp"
            android:text="ggggggggggggggggggkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"
           />

        <TextView
            android:id="@+id/textView_commentusername"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Username"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/coment"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imageButton_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/in"
                app:srcCompat="@drawable/ic_reply_black_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:text="Reply" />


            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"/>


            <TextView
                android:id="@+id/textView_commentreplys"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="replies(6)"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
              />




        </LinearLayout>

    </RelativeLayout>

</LinearLayout>