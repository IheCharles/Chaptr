<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/delu"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/useract_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffffe"
        android:scrollbars="none" >
    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/recyerview_post_sad2"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/goodgrey"
            android:text="Liked stories will show up here so you can read them again." />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/in"
            app:srcCompat="@drawable/ic_favorite_black_24dp_grey" />

    </LinearLayout>
</RelativeLayout>