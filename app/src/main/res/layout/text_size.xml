<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="35dp"
    app:cardBackgroundColor="@color/disc"
    android:paddingStart="35dp"
    android:background="@drawable/dialog_bg">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/disc"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/linearlayout_14sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@color/in"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="80dp"
                    android:paddingStart="80dp"
                    android:text="14sp"
                    android:textSize="14sp"
                    />


                <CheckBox
                    android:id="@+id/checkBox_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_18sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@color/in"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="75dp"
                    android:paddingStart="75dp"
                    android:text="18sp"
                    android:textSize="18sp"
                     />


                <CheckBox
                    android:id="@+id/checkBox_18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearlayout_22sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@color/in"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="70dp"
                    android:paddingStart="70dp"
                    android:text="22sp"
                    android:textSize="22sp"
                    />


                <CheckBox
                    android:id="@+id/checkBox_22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout__26sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@color/in"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="65dp"
                    android:paddingStart="65dp"
                    android:text="26sp"
                    android:textSize="26sp" />


                <CheckBox
                    android:id="@+id/checkBox_26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearlayout__30sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@color/in"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/in"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="62dp"
                    android:paddingStart="62dp"
                    android:text="30sp"
                    android:textSize="30sp" />


                <CheckBox
                    android:id="@+id/checkBox_30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>